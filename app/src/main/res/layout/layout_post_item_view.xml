<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/list_standard_item_padding_vertical"
        android:paddingLeft="@dimen/list_standard_item_padding_horizontal"
        android:paddingRight="@dimen/list_standard_item_padding_horizontal"
        android:paddingTop="@dimen/list_standard_item_padding_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_title"
                android:textColor="@color/list_title_color"
                android:textSize="@dimen/list_standard_title_font_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Author"
                    android:textColor="@color/list_appendix_color" />

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/list_standard_item_author_text_dimen"
                    android:layout_weight="0"
                    android:text="2014-09-24 08:00:09"
                    android:textColor="@color/list_appendix_color" />

                <TextView
                    android:id="@+id/text_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/list_standard_item_text_gap"
                    android:singleLine="true"
                    android:text="@string/sample_group"
                    android:textColor="@color/list_appendix_color"
                    android:textSize="@dimen/text_author_view_font_size_dimen" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="@dimen/list_standard_item_reply_image_dimen"
                    android:layout_height="@dimen/list_standard_item_reply_image_dimen"
                    android:layout_weight="0"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/text_replies_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/sample_like_num"
                    android:textColor="@color/list_appendix_color" />

                <ImageView
                    android:layout_width="@dimen/list_standard_item_like_image_dimen"
                    android:layout_height="@dimen/list_standard_item_like_image_dimen"
                    android:layout_marginLeft="@dimen/list_standard_item_text_gap"
                    android:layout_weight="0"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/text_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/sample_like_num"
                    android:textColor="@color/list_appendix_color"
                    android:textSize="@dimen/text_author_view_font_size_dimen" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_title"
            android:layout_width="@dimen/list_post_item_title_image_dimen"
            android:layout_height="@dimen/list_post_item_title_image_dimen"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/list_standard_item_text_gap"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

</android.support.v7.widget.CardView>