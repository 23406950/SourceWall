<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context="com.example.sourcewall.ArticleActivity">


    <com.example.sourcewall.commonview.LListView
        android:id="@+id/list_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <LinearLayout
        android:id="@+id/layout_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_collapse"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_expand" />

        </RelativeLayout>

        <Button
            android:id="@+id/button_favor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_favor"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_recommend"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_reply"
            android:visibility="gone" />


    </LinearLayout>

</RelativeLayout>
